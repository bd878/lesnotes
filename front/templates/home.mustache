<div id="content" class="flex flex-row">
	<div id="sidebar" class="flex flex-col">
		<h2 class="italic text-2xl inline-block cursor-pointer">Les Notes</h2>

		<a href="/logout" target="_self" class="underline text-blue-600 visited:text-purple-600">{{logout}}</a>
	</div>

	<div id="messages" class="ml-4 flex flex-col">
		<div class="flex flex-col w-full">
			{{#error}}
				<span>{{.}}</span>
			{{/error}}
			{{^error}}
				<div id="threads">
					<ul class="flex flex-col">
						{{#threads}}
							<li data-thread-id="{{ID}}" class="pb-2">
								<span>{{text}}</span>
								<span>{{ID}}</span>
							</li>
						{{/threads}}
					</ul>
				</div>

				<div id="messages-list">
					<ul class="flex flex-col">
						{{#messages}}
							<li data-message-id="{{ID}}" class="pb-2 grow-1 max-w-full flex flex-row justify-between">
								<span>{{text}}</span>
								<span>{{ID}}</span>
							</li>
						{{/messages}}
					</ul>
				</div>
			{{/error}}
		</div>
	</div>

	<div id="editor" class=" ml-4 flex flex-row">
		{{#message}}
			<div id="message">
				<span>{{text}}</span>
				<span>{{ID}}</span>
			</div>
		{{/message}}
		{{^message}}
			<form id="message-form" name="message-form" autocomplete="off" onsubmit="return false;">
				<textarea name="text" type="input" class="focus:outline-none w-full resize-none px-2 py-1"></textarea>

				<input id="file" name="file" type="file"></input>

				<button type="submit" css="border-1 px-4 border-solid text-left cursor-pointer">{{send}}</button>
			</form>
		{{/message}}
	</div>
</div>