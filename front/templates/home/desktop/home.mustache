<div id="content" class="h-full max-w-full flex flex-row">
	<div id="sidebar" class="min-w-3xs max-w-3xs ml-8">
		{{> sidebar}}
	</div>

	<div id="editor" class="min-w-lg max-w-lg flex flex-row ml-8">
		<div class="flex flex-col grow-2 w-full">
			<div id="message-editor" class="flex flex-col grow p-2 mb-2 border border-1 border-solid rounded-md">
				{{#message}}
					{{#editMessage}}
						{{> messageEditForm}}
					{{/editMessage}}
					{{^editMessage}}
						{{> messageView}}
					{{/editMessage}}
				{{/message}}
				{{^message}}
					{{> newMessageForm}}
				{{/message}}
			</div>

			<div id="files-editor">
				{{#message}}
					{{#editMessage}}
						{{> filesForm}}
					{{/editMessage}}
					{{^editMessage}}
						{{> filesList}}
					{{/editMessage}}
				{{/message}}
				{{^message}}
					{{> filesForm}}
				{{/message}}
			</div>
		</div>
	</div>

	<div id="threads" class="flex flex-col w-full max-w-full overflow-x-hidden ml-8">
		<div id="messages" class="flex flex-col w-full max-w-full overflow-x-hidden h-full">
			<div id="messages-list" class="flex flex-row max-w-full overflow-x-auto h-full grow">
				{{> messagesList}}
			</div>
		</div>
	</div>
</div>