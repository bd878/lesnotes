						<defs>
						<clipPath id="clip0_429_11085">
						<rect width="24" height="24" fill="white"/>
						</clipPath>
						</defs>
						</svg>
					</button>
				{{/private}}
				{{^private}}
					<button formaction="{{privateAction}}" type="submit" class="cursor-pointer mr-4">
						<svg class="dark:stroke-gray-400 dark:hover:stroke-white stroke-black" width="24px" height="24px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<g clip-path="url(#clip0_429_11158)">
						<path d="M10.7302 5.07319C11.1448 5.02485 11.5684 5 11.9999 5C16.6639 5 20.3998 7.90264 21.9999 12C21.6053 13.0104 21.0809 13.9482 20.4446 14.7877M6.51956 6.51944C4.47949 7.76406 2.90105 9.69259 1.99994 12C3.60008 16.0974 7.33597 19 11.9999 19C14.0375 19 15.8979 18.446 17.4805 17.4804M9.87871 9.87859C9.33576 10.4215 8.99994 11.1715 8.99994 12C8.99994 13.6569 10.3431 15 11.9999 15C12.8284 15 13.5785 14.6642 14.1214 14.1212" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
