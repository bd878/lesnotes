						<defs>
						<clipPath id="clip0_429_11158">
						<rect width="24" height="24" fill="white"/>
						</clipPath>
						</defs>
						</svg>
					</button>
				{{/private}}
			</form>

			<a href="{{newNoteHref}}" target="_self" class="rounded-md dark:hover:text-white border-1 px-4 border-solid text-left cursor-pointer">{{newNoteButton}}</a>
		</div>
	</div>
{{/ID}}