<form id="message-form" name="message-form" autocomplete="off" onsubmit="return false;" class="w-full flex flex-row grow">
	<div class="flex flex-col grow">
		<input name="messageTitle" class="w-full px-1 border-1 dark:text-white border-gray-600 rounded-md resize-none placeholder:italic px-1 placeholder:text-gray-600 rounded-md text-lg mb-2" placeholder="{{titlePlaceholder}}"></input>
		<textarea name="messageText" type="input" class="w-full px-1 dark:text-white border-1 border-gray-600 rounded-md overflow-hidden wrap-break-word text-start resize-none px-1 placeholder:italic placeholder:text-gray-600 mb-2 rounded-md text-sm h-full" placeholder="{{textPlaceholder}}"></textarea>

		<div class="flex flex-row justify-between items-end">
			<button type="submit" class="rounded-md dark:hover:text-white border-1 px-4 border-solid text-left cursor-pointer">
				{{sendButton}}
			</button>
		</div>
	</div>
</form>