<form
	autocomplete="off"
	method="POST"
	type="multipart/form-data"
	class="w-full flex flex-row grow"
>
	<div class="flex flex-col grow">
		<input name="title" class="w-full px-1 border-1 dark:text-white border-gray-600 rounded-md resize-none large:text-lg small:text-sm large:placeholder:text-lg small:placeholder:text-sm placeholder:italic px-1 placeholder:text-gray-600 rounded-md text-lg mb-2" placeholder="{{titlePlaceholder}}"></input>
		<textarea name="text" type="input" class="w-full px-1 dark:text-white large:text-lg small:text-sm large:placeholder:text-lg small:placeholder:text-sm border-1 border-gray-600 rounded-md overflow-y-scroll wrap-break-word text-start resize-none px-1 placeholder:italic placeholder:text-gray-600 mb-2 rounded-md text-sm h-full" placeholder="{{textPlaceholder}}"></textarea>
		<input type="hidden" name="thread" value="{{thread}}" />

		<div class="flex flex-row justify-between items-end">
			<button formaction="{{sendAction}}" type="submit" class="rounded-md dark:hover:text-white border-1 px-4 border-solid text-left cursor-pointer">
				{{sendButton}}
			</button>
		</div>
	</div>
</form>