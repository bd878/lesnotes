<form id="message-form" name="message-form" autocomplete="off" onsubmit="return false;" class="w-full flex flex-row grow">
	<div class="flex flex-col grow">
		<input name="messageTitle" class="w-full resize-none placeholder:italic px-1 placeholder:text-gray-600 rounded-md text-lg mb-2" placeholder="{{titlePlaceholder}}"></input>
		<textarea name="messageText" type="input" class="w-full resize-none px-1 placeholder:italic placeholder:text-gray-600 mb-2 rounded-md text-sm h-full" placeholder="{{textPlaceholder}}"></textarea>

		<div class="flex flex-row justify-between items-end">
			<button type="submit" class="rounded-md border-1 px-4 border-solid text-left cursor-pointer">
				{{sendButton}}
			</button>

			<div class="flex flex-col">
				<div id="files-list" class="mb-2 mt-2 overflow-hidden whitespace-nowrap text-ellipsis"></div>

				<form id="file-form" name="file-form" autocomplete="off" onsubmit="return false;" class="flex flex-row">
					<input id="files-input" class="hidden" type="file" multiple></input>
					<button id="select-files-button" type="button" class="cursor-pointer">
						<svg width="24px" height="24px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M6 7.90909V16C6 19.3137 8.68629 22 12 22V22C15.3137 22 18 19.3137 18 16V6C18 3.79086 16.2091 2 14 2V2C11.7909 2 10 3.79086 10 6V15.1818C10 16.2864 10.8954 17.1818 12 17.1818V17.1818C13.1046 17.1818 14 16.2864 14 15.1818V8" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</button>
				</form>
			</div>
		</div>
	</div>
</form>