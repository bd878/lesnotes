<div class="w-full border-1 border-solid rounded-md">
	<select
		multiple
		name="file_ids"
		id="files"
		autocomplete="off"
		class="w-full"
	>
		<option value="" selected>{{defaultFile}}</option>
		{{#files}}
			{{#isSelected}}
				<option value="{{ID}}" selected>{{name}}</option>
			{{/isSelected}}
			{{^isSelected}}
				<option value="{{ID}}">{{name}}</option>
			{{/isSelected}}
		{{/files}}
	</select>
</div>