{{#ID}}
	<form
		autocomplete="off"
		method="POST"
		class="w-full flex flex-col grow"
	>
		<div class="flex flex-col grow">
			{{^private}}
				<div class="flex flex-row mb-2"><a class="hover:underline dark:text-blue-600 dark:hover:text-white italic text-blue-600 text-sm" href="/t/{{name}}" target="_blank">https://{{domain}}/t/</a><input name="name" class="grow-1 ml-1 px-1 border-1 border-gray-600 rounded-md placeholder:italic placeholder:text-gray-600 resize-none text-sm" placeholder="{{namePlaceholder}}" value="{{name}}"></input></div>
			{{/private}}
			<input name="id" type="hidden" value="{{ID}}">
			<textarea name="description" type="input" class="w-full h-full dark:text-white px-1 mb-2 border-1 rounded-md border-gray-600 resize-none overflow-y-scroll wrap-break-word text-start placeholder:italic placeholder:text-gray-600 rounded-md" placeholder="{{descriptionPlaceholder}}">{{{description}}}</textarea>
		</div>

		<div class="flex flex-col">
			<div class="flex flex-row justify-between">
				<button formaction="{{updateAction}}" type="submit" class="rounded-md border-1 px-4 border-solid dark:hover:text-white text-left cursor-pointer">{{updateButton}}</button>
				<a href="{{cancelEditHref}}" target="_self" class="flex justify-center border-1 px-4 border-solid rounded-md dark:hover:text-white text-left cursor-pointer">{{cancelButton}}</a>
			</div>
		</div>
	</form>
{{/ID}}