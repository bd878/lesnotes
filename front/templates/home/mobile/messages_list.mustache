{{#stack}}
	<details class="flex flex-col mb-4 small:mb-2 last:mb-0 min-w-full max-w-md" open>
		<summary>
			{{#ID}}
				<a target="_self" href="/home?cwd={{ID}}" class="mb-2 underline">
			{{/ID}}
			{{^ID}}
				<a target="_self" href="/home" class="mb-2 underline">
			{{/ID}}
				{{#title}}
					/{{title}}
				{{/title}}
				{{^title}}
					{{#text}}
						/{{text}}
					{{/text}}
					{{^text}}
						/
					{{/text}}
				{{/title}}
			</a>
		</summary>

		<div class="overflow-y-auto">
			<ul class="flex flex-col">
				{{#messages}}
					<li class="grow-1 flex flex-row justify-between whitespace-nowrap">
						{{#isCenter}}
							{{#isSelected}}
								<button type="button" class="flex flex-row justify-between overflow-hidden bg-gray-300 dark:bg-cyan-500 dark:text-white cursor-pointer text-left w-full" data-message-id="{{ID}}">
							{{/isSelected}}
							{{^isSelected}}
								<button type="button" class="dark:bg-cyan-700 dark:text-white bg-blue-100  flex flex-row justify-between overflow-hidden bg-blue-100 cursor-pointer text-left w-full" data-message-id="{{ID}}">
							{{/isSelected}}
						{{/isCenter}}
						{{^isCenter}}
							{{#isSelected}}
								<button type="button" class="flex flex-row justify-between overflow-hidden dark:bg-slate-600 dark:text-white bg-gray-300 cursor-pointer text-left w-full" data-message-id="{{ID}}">
							{{/isSelected}}
							{{^isSelected}}
								<button type="button" class="flex flex-row justify-between overflow-hidden  cursor-pointer text-left w-full" data-message-id="{{ID}}">
							{{/isSelected}}
						{{/isCenter}}
								<div class="overflow-hidden text-ellipsis mr-2" data-message-id="{{ID}}">
									{{#title}}
										{{title}}
									{{/title}}
									{{^title}}
										{{text}}
									{{/title}}
								</div>
						</button>

						{{#isCenter}}
							<button type="button" class="pl-2 dark:bg-blue-100 dark:bg-cyan-700 dark:text-white bg-blue-100 cursor-pointer text-end" data-thread-id="{{ID}}">{{count}} > </button>
						{{/isCenter}}
						{{^isCenter}}
							<button type="button" class="pl-2 cursor-pointer text-end" data-thread-id="{{ID}}">{{count}} > </button>
						{{/isCenter}}
					</li>
				{{/messages}}
				{{^messages}}
					{{#message}}
						<li class="text-gray-600 italic">{{noMessagesText}}</li>
					{{/message}}
					{{^message}}
						<li class="text-gray-600 italic">{{newMessageText}}</li>
					{{/message}}
				{{/messages}}
			</ul>
		</div>

		<div class="flex flex-row mt-2">
			{{^isLastPage}}
				<button type="button" data-offset="{{offset}}" data-limit="{{limit}}" data-thread-id="{{ID}}" data-direction="prev" class="bg-gray-300 dark:bg-slate-600 grow mr-2 last:mr-0 cursor-pointer"><-</button>
			{{/isLastPage}}

			{{^isFirstPage}}
				<button type="button" data-offset="{{offset}}" data-limit="{{limit}}" data-thread-id="{{ID}}" data-direction="next" class="bg-gray-300 dark:bg-slate-600 grow cursor-pointer">-></button>
			{{/isFirstPage}}
		</div>
	</details>
{{/stack}}
{{^stack}}
	<div class="grow"></div>
{{/stack}}