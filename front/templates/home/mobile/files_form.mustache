<div class="dark:bg-slate-600 bg-blue-100 justify-between p-2 small:p-1 rounded-md small:min-h-[30px] min-h-[40px]">
	<form id="file-form" name="file-form" autocomplete="off" onsubmit="return false;" class="h-full max-h-40 flex flex-row justify-between overflow-hidden">
		{{^files}}
			<div id="no-files" class="w-full flex items-start italic text-sm small:text-xs large:text-base">
				{{noFiles}}
			</div>
		{{/files}}
		<div id="files-list" class="w-full overflow-y-auto whitespace-nowrap text-ellipsis"></div>

		<div class="flex flex-row items-end">
			<input id="files-input" class="hidden" type="file" multiple></input>
			<button id="select-files-button" type="button">
				<svg class="dark:stroke-gray-400 stroke-black" width="24px" height="24px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M6 7.90909V16C6 19.3137 8.68629 22 12 22V22C15.3137 22 18 19.3137 18 16V6C18 3.79086 16.2091 2 14 2V2C11.7909 2 10 3.79086 10 6V15.1818C10 16.2864 10.8954 17.1818 12 17.1818V17.1818C13.1046 17.1818 14 16.2864 14 15.1818V8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
			</button>
		</div>
	</form>
</div>