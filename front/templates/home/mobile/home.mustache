<div id="content" class="flex flex-col">
	<div id="sidebar" class="w-full max-w-5xl mb-4 px-5">
		{{> homeSidebar}}
	</div>

	<div id="search" class="mb-4 max-w-5xl px-5">
		{{> searchPath}}
	</div>

	<div class="flex flex-col max-w-5xl w-full mb-4 px-5">
		<div id="editor" class="mb-4 h-[300px] flex flex-col grow p-2 border border-1 border-solid rounded-md">
			{{#message}}
				{{#editMessage}}
					{{> messageEditForm}}
				{{/editMessage}}
				{{^editMessage}}
					{{> messageView}}
				{{/editMessage}}
			{{/message}}
			{{^message}}
				{{> newMessageForm}}
			{{/message}}
		</div>

		<div id="files" class="flex flex-col bg-blue-100 justify-between p-2 rounded-md">
			{{#message}}
				{{#editMessage}}
					{{> filesForm}}
				{{/editMessage}}
				{{^editMessage}}
					{{> filesList}}
				{{/editMessage}}
			{{/message}}
			{{^message}}
				{{> filesForm}}
			{{/message}}
		</div>
	</div>

	<div id="messages">
		<div id="messages-list" class="flex flex-row overflow-x-scroll">
			{{> messagesList}}
		</div>
	</div>
</div>