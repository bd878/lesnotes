<div id="content" class="flex flex-col">
	<div id="sidebar" class="w-full max-w-5xl mb-3 px-5 small:px-3">
		{{> sidebar}}
	</div>

	<div id="editor" class="px-5 small:px-3 mb-4 small:mb-2 max-w-5xl w-full flex flex-row">
		<div class="flex flex-col w-full">
			<div class="mb-4 small:mb-2 h-[300px] flex flex-col grow small:p-1 p-2 border border-1 border-solid rounded-md">
				{{#message}}
					{{#editMessage}}
						{{> messageEditForm}}
					{{/editMessage}}
					{{^editMessage}}
						{{> messageView}}
					{{/editMessage}}
				{{/message}}
				{{^message}}
					{{> newMessageForm}}
				{{/message}}
			</div>

			<div class="flex flex-col bg-blue-100 justify-between rounded-md">
				{{#message}}
					{{#editMessage}}
						{{> filesInput}}
					{{/editMessage}}
					{{^editMessage}}
						{{> filesList}}
					{{/editMessage}}
				{{/message}}
				{{^message}}
					{{> filesInput}}
				{{/message}}
			</div>
		</div>
	</div>

	<div id="threads" class="px-5 small:px-3">
		<div id="messages" class="w-full h-full">
			<div id="messages-list" ondragover="event.preventDefault()" class="flex flex-col">
				{{> navigation}}
				{{> messagesStack}}
			</div>
		</div>
	</div>
</div>