<div class="mt-2 max-w-md min-w-3xs w-full grow px-5">
	<div class="mb-3">
		{{> sidebar}}
	</div>

	<form
		action="{{action}}"
		method="post"
		type="multipart/form-data"
		autocomplete="off"
		name="login-form"
		class="flex flex-col"
	>
		<div>
			{{> username}}
		</div>
		<div class="mt-2">
			{{> password}}
		</div>

		<div class="mt-2 text-sm italic text-red-600 dark:text-red-400">{{error}}</div>

		<div class="mt-3">
			{{> submit}}
		</div>
	</form>
</div>

<div class="mt-2 px-5" id="telegram-login-widget">
</div>