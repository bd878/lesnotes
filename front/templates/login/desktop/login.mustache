<div class="mt-2 max-w-md min-w-3xs w-full grow px-8">
	<a class="italic text-2xl inline-block cursor-pointer hover:text-blue-600 mb-4" href="/" target="_self">Les Notes</a>

	<form
		id="login-form"
		action=""
		onsubmit="return false;"
		type="multipart/form-data"
		autocomplete="off"
		name="login-form"
		class="flex flex-col"
	>
		<div>
			<label htmlFor="login">{{username}}</label>
			<input
				required
				name="login"
				type="text"
				class="block w-full border-solid rounded-md px-1 border-1"
			/>
		</div>
		<div class="mt-2">
			<div el="label" htmlFor="password">{{password}}</div>
			<input
				required
				name="password"
				type="password"
				class="block w-full border-solid rounded-md px-1 border-1"
			/>
		</div>

		<div class="flex flex-row justify-between mt-4">
			<a
				el="a"
				href="/signup"
				target="_self"
				class="hover:underline italic hover:text-blue-600 text-left cursor-pointer"
			>
				{{register}}
			</a>

			<button
				type="submit"
				class="border-1 px-4 border-solid rounded-md px-1 text-left cursor-pointer"
			>{{login}}</button>
		</div>
	</form>
</div>

<div class="mt-2 px-8" id="telegram-login-widget">
</div>