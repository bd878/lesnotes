{{#isEmpty}}
	<div class="grow">{{emptyListText}}</div>
{{/isEmpty}}
{{^isEmpty}}
	<div class="h-full w-full">
		<ul class="h-full w-full">
			{{#list}}
				<li class="grow-1 max-w-full flex flex-row justify-between whitespace-nowrap first:mt-[2px] last:mb-[2px] mx-[2px]">
					<button type="button" class="flex flex-row justify-between overflow-hidden dark:hover:bg-slate-600 dark:hover:text-white hover:bg-gray-300 cursor-pointer text-left px-2 w-full z-1" data-message-id="{{ID}}">
						{{#path}}
							<span>{{.}}</span>/
						{{/path}}

						<div class="overflow-hidden text-ellipsis mr-2" data-message-id="{{ID}}">
							{{#title}}
								{{title}}
							{{/title}}
							{{^title}}
								{{text}}
							{{/title}}
						</div>
					</button>
				</li>
			{{/list}}
			{{^list}}
				<li class="text-gray-600 italic mx-[2px]">>{{emptyListText}}</li>
			{{/list}}
		</ul>
	</div>
{{/isEmpty}}