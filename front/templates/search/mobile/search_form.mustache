<form
	action="{{action}}"
	autocomplete="off"
	method="POST"
	enctype="multipart/form-data"
	class="flex flex-row"
>
	<input required class="w-md placeholder:italic px-1 placeholder:text-gray-600 border rounded-md border-black" type="text" name="search" placeholder="{{searchPlaceholder}}"></input>
	<button type="submit" class="rounded-md border-1 px-4 border-solid text-left cursor-pointer">{{searchMessages}}</button>
</form>
