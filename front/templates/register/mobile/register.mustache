<div class="mt-2 max-w-md min-w-3xs w-full grow px-5">
	<div class="mb-3">
		{{> sidebar}}
	</div>

	<div class="mb-3">
		<details>
			<summary class="mb-2">{{settingsHeader}}</summary>
			{{> settings}}
		</details>
	</div>

	<div>
		<form id="register-form" autoComplete="off" name="register-form" class="flex flex-col">
			<div>
				{{> username}}
			</div>

			<div class="mt-2">
				{{> password}}
			</div>
		</form>

		<div id="register-error" class="mt-2 hidden text-sm small:text-xs large:text-md italic text-red-600 dark:text-red-400"></div>

		<div class="mt-3">
			{{> submit}}
		</div>
	</div>
</div>

<div class="mt-2 px-5" id="telegram-login-widget">
</div>