<div class="mt-2 max-w-md min-w-3xs w-full grow px-8">
	<div class="mb-4">
		{{> sidebar}}
	</div>

	<div class="mb-4">
		<details>
			<summary class="cursor-pointer mb-2">{{settingsHeader}}</summary>
			{{> settings}}
		</details>
	</div>

	<form
		id="register-form"
		name="register-form"
		class="flex flex-col"
		action=""
		onsubmit="return false;"
		type="multipart/form-data"
		autocomplete="off"
	>
		<div>
			{{> username}}
		</div>

		<div class="mt-2">
			{{> password}}
		</div>

		<div id="register-error" class="mt-2 hidden small:text-xs large:text-md text-sm italic text-red-600 dark:text-red-400">
		</div>

		<div class="mt-4">
			{{> submit}}
		</div>
	</form>

</div>

<div class="mt-2 px-8" id="telegram-login-widget">
</div>