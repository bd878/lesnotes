<div class="flex flex-col items-start">
	<div id="theme-settings" class="flex flex-row mb-1">
		{{#themes}}
			{{#myTheme}}
				<button type="button" data-theme="{{theme}}" class="hover:text-blue-600 dark:hover:text-white underline cursor-pointer mr-2">{{label}}</button>
			{{/myTheme}}
			{{^myTheme}}
				<button type="button" data-theme="{{theme}}" class="hover:text-blue-600 dark:hover:text-white cursor-pointer mr-2">{{label}}</button>
			{{/myTheme}}
		{{/themes}}
	</div>

	<div id="lang-settings" class="flex flex-row mb-1">
		{{#langs}}
			{{#myLang}}
				<button type="button" data-lang="{{lang}}" class="hover:text-blue-600 dark:hover:text-white underline cursor-pointer mr-2">{{label}}</button>
			{{/myLang}}
			{{^myLang}}
				<button type="button" data-lang="{{lang}}" class="hover:text-blue-600 dark:hover:text-white cursor-pointer mr-2">{{label}}</button>
			{{/myLang}}
		{{/langs}}
	</div>

	<div id="font-size-settings" class="flex flex-row">
		{{#fonts}}
			{{#myFont}}
				<button type="button" data-font-size="{{font}}" class="{{css}} hover:text-blue-600 dark:hover:text-white underline cursor-pointer mr-2">{{label}}</button>
			{{/myFont}}
			{{^myFont}}
				<button type="button" data-font-size="{{font}}" class="{{css}} hover:text-blue-600 dark:hover:text-white cursor-pointer mr-2">{{label}}</button>
			{{/myFont}}
		{{/fonts}}
	</div>
</div>
