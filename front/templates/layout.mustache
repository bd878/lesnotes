<!DOCTYPE html>
{{#html}}
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" href="/public/favicon.ico">
		<meta name="viewport" content="width=device-width,initial-scale=1" />

		{{#styles}}
			<style type="text/css">{{{styles}}}</style>
		{{/styles}}

		{{#manifest}}
			<link rel="manifest" href={{{.}}} />
		{{/manifest}}

		<title>Les notes</title>
	</head>
	<body class="large:text-xl small:text-sm dark:bg-gray-900 dark:text-gray-400 text-gray-950">
		{{#isMobile}}
			<div data-is-mobile="{{isMobile}}" class="py-5 h-screen flex flex-col items-start relative">
		{{/isMobile}}
		{{^isMobile}}
			<div class="pb-5 pt-10 h-screen flex flex-col items-start relative">
		{{/isMobile}}
			<div class="w-full grow">
				{{> content}}
			</div>

		{{#isMobile}}
			<div class="pt-5 pb-5 w-full">
		{{/isMobile}}
		{{^isMobile}}
			<div class="pt-8 pb-8 w-full">
		{{/isMobile}}
				{{> footer}}
			</div>
		</div>

		{{#scripts}}
			<script type="module" src="{{{.}}}"></script>
		{{/scripts}}
	</body>
{{/html}}